<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blue_background"
    tools:context=".TimerActivity">

    <TextView
        android:id="@+id/time_test"
        android:layout_width="220dp"
        android:layout_height="89dp"
        android:fontFamily="@font/roboto"
        android:text="00:00:00"
        android:textAlignment="center"
        android:textSize="50sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.375" />

    <ProgressBar
        android:id="@+id/timerBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="305dp"
        android:layout_height="266dp"
        android:backgroundTint="#03A9F4"
        android:layoutDirection="ltr"
        android:max="100"
        android:progress="100"
        android:progressDrawable="@drawable/timer_circle"
        android:rotation="-90"
        app:layout_constraintBottom_toBottomOf="@+id/time_test"
        app:layout_constraintEnd_toEndOf="@+id/time_test"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="@+id/time_test"
        app:layout_constraintTop_toTopOf="@+id/time_test"
        app:layout_constraintVertical_bias="0.531" />

</androidx.constraintlayout.widget.ConstraintLayout>