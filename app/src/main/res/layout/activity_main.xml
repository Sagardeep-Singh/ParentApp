<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">

    <Button
        android:id="@+id/start_child_list"
        android:layout_width="132dp"
        android:layout_height="61dp"
        android:layout_marginTop="150dp"
        android:backgroundTint="#7EE42828"
        android:text="@string/activity_main_children"
        android:textColor="#212121"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btn_start_timer"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toStartOf="@+id/btn_start_timer"
        app:layout_constraintTop_toBottomOf="@+id/btn_start_timer" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#E61936"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/start_flip"
        android:layout_width="185dp"
        android:layout_height="93dp"
        android:backgroundTint="#E61936"
        android:radius="20dp"
        android:text="@string/flip_a_coin"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintVertical_bias="0.137" />

    <Button
        android:id="@+id/btn_start_timer"
        android:layout_width="134dp"
        android:layout_height="62dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#7EE42828"
        android:text="@string/activity_main_timer"
        android:textColor="#212121"
        app:layout_constraintEnd_toEndOf="@+id/start_flip"
        app:layout_constraintStart_toStartOf="@+id/start_flip"
        app:layout_constraintTop_toBottomOf="@+id/start_flip" />

</androidx.constraintlayout.widget.ConstraintLayout>